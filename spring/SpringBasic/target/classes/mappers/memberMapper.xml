<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springbasic.mappers.memberMapper">
  	<select id="getDateTime" resultType="string">
  		select now();
  	</select>
  	
  	<insert id="insertMember">
  		insert into member values(#{memberId}, sha1(md5(#{memberPwd})), #{memberEmail}, #{memberMobile}, 
  								#{memberGender}, #{memberHobby}, #{job}, #{userImg}, #{memo}, #{isAdmin})
  	</insert>
  	
  	<update id="updateMember">
  		update member set memberMobile = #{memberMobile} where memberId = #{memberId}
  	</update>
  	
  	<delete id="deleteMember">
  		delete from member where memberId = #{memberId}
  	</delete>
  	
  	<select id="viewAllMember" resultType="com.springbasic.domain.MemberDTO">
  		select * from member
  	</select>
  	
  	<select id="viewMemberById" resultType="com.springbasic.domain.MemberDTO">
  		select * from member where memberId = #{memberId}
  	</select>
  	
  	<select id="loginMember" resultType ="com.springbasic.domain.MemberDTO">
  		select * from member where memberId = #{memberId} and memberPwd = sha1(md5(#{memberPwd}))
  	</select>
</mapper>